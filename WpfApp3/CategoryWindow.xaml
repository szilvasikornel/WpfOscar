<Window x:Class="WpfApp3.CategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Új Oscar Díj Kategória" Height="128" Width="400">
    <Grid Height="115" VerticalAlignment="Top">
        <Label Content="Új Kategória neve:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0"/>
        <TextBox x:Name="categoryTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="150,20,0,0"/>
        <Button Content="Kategória hozzáadása" HorizontalAlignment="Center" VerticalAlignment="Top" Width="150" Height="30" Margin="0,60,0,0" Click="AddCategoryButton_Click"/>
    </Grid>
</Window>
